{
  "version": 2,
  "buildCommand": "pnpm build",
  "outputDirectory": "dist",
  "env": {
    "DB_HOST": "@db_host",
    "DB_USER": "@db_user",
    "DB_PASSWORD": "@db_password",
    "DB_NAME": "@db_name",
    "JWT_SECRET": "@jwt_secret"
  },
  "functions": {
    "src/server/server.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/src/server/server.ts"
    }
  ]
}
